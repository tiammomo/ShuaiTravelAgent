# =============================================================================
# ShuaiTravelAgent LLM Configuration
# =============================================================================
# 说明: 这是配置文件模板。实际使用时：
#   1. 复制此文件为 llm_config.yaml
#   2. 修改其中的 api_key 为你的实际 API Key
#   3. 根据需要添加或修改模型配置
#
# 支持的 provider 类型:
#   - openai        : OpenAI GPT 系列
#   - anthropic     : Anthropic Claude 系列
#   - google        : Google Gemini 系列
#   - ollama        : Ollama 本地模型
#   - openai-compatible : 兼容 OpenAI API 的自定义服务
# =============================================================================

# 默认使用的模型ID
default_model: gpt-4o-mini

# 模型配置列表
models:
  # ---------------------------------------------------------------------
  # 示例 1: OpenAI 官方 API
  # ---------------------------------------------------------------------
  gpt-4o-mini:
    name: "GPT-4o Mini"
    provider: openai
    model: "gpt-4o-mini"
    api_base: "https://api.openai.com/v1"
    api_key: "sk-YOUR_OPENAI_API_KEY"
    temperature: 0.7
    max_tokens: 2000
    timeout: 30
    max_retries: 3

  # ---------------------------------------------------------------------
  # 示例 2: Anthropic Claude
  # ---------------------------------------------------------------------
  claude-3-5-sonnet:
    name: "Claude 3.5 Sonnet"
    provider: anthropic
    model: "claude-sonnet-4-20250514"
    api_base: "https://api.anthropic.com/v1"
    api_key: "sk-ant-YOUR_ANTHROPIC_API_KEY"
    temperature: 0.7
    max_tokens: 2000
    timeout: 60
    max_retries: 3

  # ---------------------------------------------------------------------
  # 示例 3: Google Gemini
  # ---------------------------------------------------------------------
  gemini-1-5-pro:
    name: "Gemini 1.5 Pro"
    provider: google
    model: "gemini-1.5-pro"
    api_base: "https://generativelanguage.googleapis.com/v1beta/openai"
    api_key: "YOUR_GOOGLE_API_KEY"
    temperature: 0.7
    max_tokens: 2000
    timeout: 30
    max_retries: 3

  # ---------------------------------------------------------------------
  # 示例 4: Ollama 本地模型
  # ---------------------------------------------------------------------
  ollama-llama3:
    name: "Llama 3 (Ollama)"
    provider: openai-compatible
    model: "llama3"
    api_base: "http://localhost:11434/v1"
    api_key: ""
    temperature: 0.7
    max_tokens: 2000
    timeout: 120
    max_retries: 2

  # ---------------------------------------------------------------------
  # 示例 5: LM Studio 本地模型
  # ---------------------------------------------------------------------
  lmstudio-local:
    name: "Local Model (LM Studio)"
    provider: openai-compatible
    model: "local-model"
    api_base: "http://localhost:1234/v1"
    api_key: ""
    temperature: 0.7
    max_tokens: 2000
    timeout: 120
    max_retries: 2

  # ---------------------------------------------------------------------
  # 示例 6: 自定义兼容 API (如 zhiercourse)
  # ---------------------------------------------------------------------
  custom-api:
    name: "Custom API"
    provider: openai-compatible
    model: "gpt-4o-mini"
    api_base: "https://api.your-custom-endpoint.com/v1"
    api_key: "YOUR_CUSTOM_API_KEY"
    temperature: 0.7
    max_tokens: 2000
    timeout: 30
    max_retries: 3

# Agent 配置
agent:
  name: "TravelAssistantAgent"
  max_steps: 10
  max_reasoning_depth: 5
  max_working_memory: 10
  max_long_term_memory: 50

# Web 服务配置
web:
  host: "0.0.0.0"
  port: 8000
  debug: true

# gRPC 服务配置
grpc:
  host: "0.0.0.0"
  port: 50051
